<sheet preset="mental calculation" header="" title="Mental calculation" subtitle="Ranks of figures in a number" text="" answers_title="Answers">

	<layout font_size_offset="-1" />

	<exercise>

		<!-- Default values: width="random" generation_type="mixed" pos_matches_invisible_zero="False" -->
		<!-- Possible values: width: integer between 1 and the number of possible ranks
			 				  generation_type: "default" | "alternative" | "mixed"
										(no effect in case of 'numberof' questions, will be default)
							  pos_matches_invisible_zero: any string means True except "False" and ""
										(no effect in case of rank direct questions)  -->
		<question id="rank numberof" generation_type="default">
			<nb source="digits_places">5</nb>
		</question>

		<question id="rank reversed">
			<nb source="digits_places">6</nb>
		</question>

		<question id="rank direct">
			<nb source="digits_places">6</nb>
		</question>

		<question id="rank reversed" pos_matches_invisible_zero="True">
			<nb source="digits_places">2</nb>
		</question>

		<question id="rank numberof" pos_matches_invisible_zero="True" generation_type="default">
			<nb source="digits_places">1</nb>
		</question>

	</exercise>

</sheet>
