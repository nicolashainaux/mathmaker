<sheet header="" title="Mental calculation: areas and perimeters of rectangles" subtitle="" text="" answers_title="Answers">

	<layout type="mental" font_size_offset="-1" />

	<!-- Default value: id='generic'
		 No default for kind and subkind, they must be given -->
	<!-- Available kinds for mental calculation: tabular, slideshow -->
	<exercise id="mental_calculation" kind="tabular" shuffle="true" qspacing="">

    <mix>
			<question kind="area" subkind="rectangle" picture="true" pick="3"></question>
			<question kind="area" subkind="rectangle" pick="2"></question>
			<nb source="table_25">1</nb>
			<nb source="intpairs_2to9">1</nb>
			<nb source="table_15">1</nb>
			<nb source="table_11">1</nb>
			<nb source="intpairs_2to9" nb_variant="decimal">1</nb>
		</mix>

		<mix>
			<question kind="perimeter" subkind="rectangle" picture="true" pick="2"></question>
			<question kind="perimeter" subkind="rectangle"></question>
			<nb source="intpairs_2to9" nb_variant="decimal">1</nb>
			<nb source="table_25">1</nb>
			<nb source="intpairs_5to20" nb_variant="decimal1">1</nb>
		</mix>

		<question kind="rectangle" subkind="length_or_width" context="from_area">
			<nb source="intpairs_2to9">1</nb>
		</question>

		<question kind="rectangle" subkind="length_or_width" context="from_perimeter" picture="true">
			<nb source="intpairs_5to20">1</nb>
		</question>

	</exercise>

</sheet>
